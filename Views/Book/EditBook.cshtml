@model BookStoreDemo.Models.Book

@{
    ViewData["Title"] = "Edit Book";
}

<h1>Edit Book Page</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditBook" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model != null)
            {
                <input type="hidden" asp-for="BookId" value="@Model.BookId" />
                <div class="form-group">
                    <label asp-for="Category" class="control-label"></label>
                    <select name="CategoryId" asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryList">
                        <option value="@Model.Category">Select a category</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" value="@Model.Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Author" class="control-label"></label>
                    <input asp-for="Author" class="form-control" value="@Model.Author" />
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <br>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            }
            else
            {
                <p>The book is not available.</p>
            }
        </form>
    </div>
</div>

<div>
    <br>
    <a class="btn btn-warning btn-sm" asp-action="Index">Back to menu</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
