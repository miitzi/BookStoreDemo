@model IEnumerable<BookStoreDemo.Models.Category>

@{
    ViewData["Title"] = "Catrgory Section";
}

<h1>Catrgory Section</h1>

<p>
    <a class="btn btn-primary btn-sm" href="~/Category/AddCategory" role="button" target="_blank">Add Category</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    <a class="btn btn-outline-secondary btn-sm" asp-action="EditCategory" asp-route-id="@item.CategoryId">Edit</a>
                <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> 
                <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
